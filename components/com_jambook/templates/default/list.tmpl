<table width="100%" cellpadding="4" cellspacing="0" border="0" align="center" class="contentpane">
  <tr>
    <td><span class="contentheading">{jxtvalue=title}</span></td>
  </tr>
  <tr>
    <td valign="top" class="contentdescription">
      <p>{jxtvalue=description}
	  {jxtshowif=searchlinkempty}</p><p>{jxtvalue=searchlinkempty}{/jxtshowif}</p>
	  {jxtshowif=postitemlink}
	  	<a class='jx_functionlink' href='{jxtvalue=postitemlink}'><img src="components/com_jambook/images/editentries_big.png" alt="{jxtvalue=postitem}" title="{jxtvalue=postitem}" border="0" class="hasTip" />{jxtvalue=postitem}</a>

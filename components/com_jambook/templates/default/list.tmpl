  </tr>
{jxtshowif=pagenavlimitbox}
  <tr>
    <td align="right">{jxtlang=_JX_DISPLAY_NR}&nbsp;{jxtvalue=pagenavlimitbox}</td>
  </tr>
{/jxtshowif}
  <tr>
    <td>
	<table width="100%" border="0" cellspacing="0" cellpadding="4">
{jxtvalue=itemlist}
      </table>
    </td>
  </tr>
  <tr><td height="5"></td></tr>
{jxtshowif=pagenavpageslinks}
  <tr>
    <td align="center" class="sectiontableheader">{jxtvalue=pagenavpageslinks}</td>
  </tr>
{/jxtshowif}
{jxtshowif=pagenavpagescounter}
  <tr>
    <td align="right">{jxtvalue=pagenavpagescounter}</td>
  </tr>
{/jxtshowif}
